@model IEnumerable<EntityLayer.Concrate.Comment>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Comments</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <div>
            <p>There is no comments on this blog.<br>Write yours right now!</p>
        </div>
    }


</div>